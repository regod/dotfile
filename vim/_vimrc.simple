set nocompatible
set showcmd
set nobackup  " do not keep a backup file, use versions instead
set hlsearch  " Highlight search things
set backspace=eol,start,indent
syntax on

set expandtab
set shiftwidth=4
set softtabstop=4

filetype indent on
set cindent
set wrap

set fileencodings=utf-8,gb2312,gbk,gb18030
set termencoding=utf-8
set encoding=utf-8

set background=dark
